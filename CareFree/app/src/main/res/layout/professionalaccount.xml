<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="22dp"
    android:weightSum="1"
    android:id="@+id/linearlayout"
    android:background="#7D1935">

    <ImageView
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/logos"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Professional Account Sign Up"
        android:id="@+id/s"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/professionusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="User Name"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_above="@+id/professionpassword"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <EditText
        android:id="@+id/professionpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/password_hint"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_above="@+id/textView19"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView7" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Profession:-"
        android:id="@+id/textView19"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_above="@+id/spinner"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:entries="@array/array_name"
        android:minHeight="38dp"
        android:spinnerMode="dialog"
        android:layout_above="@+id/emailidtext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="9dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView8" />

    <EditText
        android:id="@+id/phoneno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Phone No"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_above="@+id/professionalsignup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />

    <EditText
        android:id="@+id/emailidtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email Id"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/professionalsignup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1221" />
    <Button
        android:id="@+id/professionalsignup"
        android:layout_width="293dp"
        android:layout_height="35dp"
        android:text="@string/sign_up_button_label"
        android:textColor="#ffffff"
        android:background="#4A96AD"
        android:layout_marginBottom="39dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>