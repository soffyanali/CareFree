<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:id="@+id/linearlayout"
    android:weightSum="1"
    android:background="@drawable/bg">

    <ImageView
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logos" />

    <LinearLayout android:id="@+id/email_login_form" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">

        <AutoCompleteTextView android:id="@+id/unametext" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:hint="User Name"
            android:inputType="textEmailAddress" android:maxLines="1"
            android:singleLine="true"
            android:textColor="#1d1c1c"
            android:textColorHint="#1d1c1c"
            android:layout_margin="12dp"/>

        <EditText android:id="@+id/passwordtxt" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:hint="Password"
            android:imeActionId="@+id/login"
            android:layout_margin="12dp"
            android:imeActionLabel="Password"
            android:imeOptions="actionUnspecified" android:inputType="textPassword"
            android:maxLines="1" android:singleLine="true"
            android:textColor="#1d1c1c"
            android:textColorHint="#1d1c1c" />

        <Button
            android:id="@+id/email_sign_in_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#da5a63"
            android:text="Sign In"
            android:layout_margin="12dp"
            android:textColor="#1d1c1c"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/signUpText"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_margin="12dp"
        android:background="#da5a63"
        android:text="Sign Up"
        android:textColor="#1d1c1c"
        android:textStyle="bold" />

</LinearLayout>

