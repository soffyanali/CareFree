<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="22dp"
    android:weightSum="1"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="   IT Professional Registration"
        android:id="@+id/s"
        android:textSize="28dp"
        android:textColor="#1d1c1c" />

    <EditText
        android:id="@+id/ituname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textAutoComplete"
        android:hint="User Name"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="#1d1c1c"
        android:textColorHint="#1d1c1c" />

    <EditText
        android:id="@+id/itpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailField"
        android:layout_below="@+id/emailField"
        android:ems="10"
        android:layout_margin="12dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="#1d1c1c"
        android:textColor="#1d1c1c" />

    <Spinner
        android:id="@+id/specialization"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:entries="@array/country_arrays"
        android:textSize="28dp"
        android:prompt="@string/country_prompt"
        android:layout_margin="12dp"
        />

    <MultiAutoCompleteTextView
        android:layout_margin="12dp"
        android:id="@+id/Specialskills"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:hint="Special skills"
        android:textColor="#1d1c1c"
        android:textColorHint="#1d1c1c"/>

    <EditText
        android:id="@+id/itphoneno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textAutoComplete"
        android:hint="Phone No"
        android:layout_margin="12dp"
        android:textColor="#1d1c1c"
        android:textColorHint="#1d1c1c" />

    <EditText
        android:id="@+id/itemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textAutoComplete"
        android:hint="Email ID"
        android:layout_margin="12dp"
        android:textColor="#1d1c1c"
        android:textColorHint="#1d1c1c" />

    <Button
        android:id="@+id/itsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordField"
        android:layout_below="@+id/passwordField"
        android:layout_margin="12dp"
        android:text="Sign UP"
        android:background="#da5a63"
        android:textColor="#1d1c1c" />

    </LinearLayout>
</ScrollView>